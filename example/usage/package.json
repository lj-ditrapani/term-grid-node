{
  "name": "usage-term-grid-example",
  "version": "0.0.1",
  "description": "Simplest term-grid-ui example usage",
  "scripts": {
    "start": "node -r ts-node/register usage.ts",
    "fmt": "prettier --parser typescript --write \"*.ts\"",
    "fmtjs": "prettier --write \"*.json\"",
    "tlint": "tslint --fix -c tslint.json '*.ts' 'src/**/*.ts' 'test/**/*.ts'",
    "lint": "npm run tlint && npm run fmt && npm run fmtjs",
    "all": "npm run lint && npm start"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**"
    ]
  },
  "keywords": [
    "todo",
    "terminal"
  ],
  "author": "Jonathan Di Trapani",
  "repository": "https://github.com/lj-ditrapani/term-grid-node",
  "license": "ISC",
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "prettier": "^2.0.1",
    "source-map-support": "^0.5.16",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.17.3"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "@types/node": "^13.9.3",
    "term-grid-ui": "^0.5.3",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  }
}
