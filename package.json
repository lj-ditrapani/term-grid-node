{
  "name": "term-grid-ui",
  "version": "0.5.3",
  "description": "Simple 2D color character grid abstraction for terminal apps",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "nyc -e .ts mocha -r ts-node/register \"test/**/*_test.{js,ts}\"",
    "test1": "mocha -r ts-node/register",
    "fmt": "prettier --parser typescript --write \"*.ts\" \"src/**/*.ts\" \"test/**/*.ts\"",
    "fmtjs": "prettier --write \"src/**/*.js\" \"test/**/*.js\" \"src/**/*.json\" \"test/**/*.json\" \"*.json\"",
    "tlint": "tslint --fix -c tslint.json '*.ts' 'src/**/*.ts' 'test/**/*.ts'",
    "lint": "npm run tlint && npm run fmt && npm run fmtjs",
    "tsc": "tsc",
    "doc": "typedoc --excludePrivate --excludeNotExported --out docs/ src && touch docs/.nojekyll",
    "visual-test": "ts-node visual_test.ts",
    "all": "npm run lint && tsc && npm test"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "statements": 95,
    "branches": 75,
    "functions": 90,
    "lines": 94,
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**"
    ]
  },
  "keywords": [
    "terminal",
    "text ui"
  ],
  "author": "Jonathan Di Trapani",
  "repository": "https://github.com/lj-ditrapani/term-grid-node",
  "license": "ISC",
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.8",
    "@types/sinon": "^7.0.13",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "sinon": "^7.3.2",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.3"
  },
  "files": [
    "lib/**/*"
  ]
}
