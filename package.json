{
  "name": "term-grid-ui",
  "version": "0.7.0",
  "description": "Simple 2D color character grid abstraction for terminal apps",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --coverage",
    "lint": "eslint --fix *.js *.json 'src/**/*.ts' 'test/**/*.ts'",
    "tsc": "tsc",
    "doc": "typedoc --excludePrivate --out docs/ src && touch docs/.nojekyll",
    "visual-test": "ts-node visual_test.ts",
    "all": "npm run lint && tsc && npm test"
  },
  "keywords": [
    "terminal",
    "text ui"
  ],
  "author": "Jonathan Di Trapani",
  "repository": "https://github.com/lj-ditrapani/term-grid-node",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.2",
    "prettier": "^2.0.1",
    "source-map-support": "^0.5.16",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "typedoc": "^0.23.6",
    "typescript": "^4.2.4"
  },
  "files": [
    "lib/**/*"
  ]
}
