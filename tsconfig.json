{
  "compilerOptions": {
    "declaration": true,
    "module": "CommonJS",
    "target": "es2017",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "outDir": "./lib",
    "newLine": "lf"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
